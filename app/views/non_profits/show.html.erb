<div class="container">
  <div class="row">
    <div class="image">
      <% if @non_profit.image != nil %>
        <%= image_tag @non_profit.image.url(:medium) %>
      <% end %>
    </div>
    <!--  end of image -->
    <h1><%= @non_profit.name %> <%= @non_profit.location %></h1>
    <section>
      <p><%= link_to "Edit your profile", edit_non_profit_path(@non_profit) %></p>
    </section>
    <div class="form-wrapper">
      <h2>Add an Image to your profile</h2>
      <%= form_for @non_profit, html: { class: 'form-horizontal', multipart: true } do |f| %>
        <div class="form-group text-center">
            <%= f.file_field :image %>
      ``</div>
        <%= f.button :submit, class: 'btn-success' %>
      <% end %>
    </div>
  </div>
</div>
