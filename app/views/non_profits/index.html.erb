<div class="container">
  <div class="row">
    <% if @non_profits.any? %>
      <% @non_profits.each do |non_profit| %>
        <section>
          <h1 class="title text-center"><%= non_profit.name %>, <%=non_profit.location%></h1>
          <p class="mission">
            <%= non_profit.mission %>
          </p>
        </section>
        <section>
          <% if user_signed_in?  %>
            <% if current_user.non_profits.include?(non_profit) %>
              <p>You've already applied to this Non-profit</p>
            <% else %>
              <div class="form-wrapper">
                <%= button_to "Add this non-profit", non_profit_path(non_profit), {method: 'patch', params: :non_profit} %>
              </div>
            <% end %>
          <% end %>
        </section>
      <% end %><!-- end of non_profit each loop -->
    <%end%>
  </div>
</div>
